extends layout

block content
  form(action="/books/", method="post")
    div.form-group
      input(type="text" name="book[title]", placeholder="Book Title" value=)
    div.form-group
      input(type="text" name="book[authors]["+index+"][name]", placeholder="Author name" value=)
    div.form-group
      input(type="text" name="book[authors]["+book+"][name]", placeholder="Author name")
    div.form-group
      input(type="text" name="book[authors]["+(book+1)+"][name]", placeholder="Author name")

    input(type.submit="submit", value="Save changes")
